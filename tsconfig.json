{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hugin-types/*": [
        "src/types/*"
      ],
      "@hugin-scrappers/*": [
        "src/scrapers/*"
      ],
      "@hugin-contracts/*": [
        "src/contracts/*"
      ],
      "@hugin-services/*": [
        "src/services/*"
      ],
      "@hugin-repositories/*": [
        "src/repositories/*"
      ],
      "@hugin-crons/*": [
        "src/crons/*"
      ],
      "@hugin/*": [
        "src/*"
      ],
    }
  }
}
